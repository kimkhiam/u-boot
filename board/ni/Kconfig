if NIZYNQ
choice
	prompt "NI Zynq board select"

config TARGET_NI_CRIO9066
	bool "NI cRIO-9066"
	select CRIO

config TARGET_NI_CRIO9066_MFG
	bool "NI cRIO-9066 manufacturing U-Boot"
	select MFG
	select CRIO

config TARGET_NI_CRIO9067
	bool "NI cRIO-9067"
	select CRIO

config TARGET_NI_CRIO9067_MFG
	bool "NI cRIO-9067 manufacturing U-Boot"
	select MFG
	select CRIO

config TARGET_NI_CRIO9068
	bool "NI cRIO-9068"
	select CRIO

config TARGET_NI_CRIO9068_MFG
	bool "NI cRIO-9068 manufacturing U-Boot"
	select MFG
	select CRIO

config TARGET_NIMYRIO
	bool "NI myRIO"
	select MYRIO

config TARGET_NIMYRIO_MFG
	bool "NI myRIO manufacturing U-Boot"
	select MFG
	select MYRIO

config TARGET_NIMYRIO_BO
	bool "NI myRIO board only"
	select MYRIO

config TARGET_ROBORIO
	bool "NI roboRIO"
	select MYRIO

config TARGET_ROBORIO_MFG
	bool "NI roboRIO manufacturing U-Boot"
	select MFG
	select MYRIO

config TARGET_NI_SBRIO9651
	bool "NI sbRIO 9651"
	select SBRIO

config TARGET_NI_SBRIO9651_MFG
	bool "NI sbRIO 9651 manufacturing U-Boot"
	select SBRIO
	select MFG
endchoice

config SYS_BOARD
	default "criozynq" if CRIO
	default "myrio" if MYRIO
	default "somzynq" if SBRIO

config SYS_VENDOR
	default "ni"

config SYS_SOC
	default "zynq"

config SYS_CONFIG_NAME
	default "nicriozynq" if CRIO
	default "nimyrio" if MYRIO
	default "nisomzynq" if SBRIO

config MFG
	bool "Manufacturing U-Boot"

config CRIO
	bool "cRIO derivatives"

config MYRIO
	bool "myRIO derivatives"

config SBRIO
	bool "sbRIO derivatives"

endif
