config DEVICE_CODE
	string "NI Zynq PS device id"

config FPGA_DEVICE_CODE
	string "NI Zynq FPGA device id"
	default DEVICE_CODE

config NI_USB_PID
	string "NI USB product id"
	default "0x762F" if MYRIO
	default "0x770D"

config NI_USB_VID
	string "NI USB vendor id"
	default "0x3923"

config DEVICE_DESC
	string "NI product description"

config PREFIXED_DEVICE_DESC
	string "Prefix devices description"

config TARGET_CLASS
	string "NI product family"
	default "cRIO" if CRIO || MYRIO
	default "FlexRIO" if SBRIO

config NI_BOARD_NAME
	string "NI product name"
	default DEVICE_DESC

config NI_BOARD_NAME_PREFIX
	string "Prefix of the board name"
	default "Prototype" if PROTO

config NI_BOARD_NAME_SUFFIX
	string "Suffix of the board name"
	default " Manufacturing" if MFG

config CONSOLE_LINUX_DEV
	string "Console device for Linux"
	default "ttyS0"

config CONSOLE_UBOOT_DEV
	string "Console device for U-boot"
	default "serial@80000000"

config SYS_BOARD
	default "criozynq" if CRIO
	default "myrio" if MYRIO
	default "somzynq" if SBRIO

config SYS_VENDOR
	default "ni"

config SYS_SOC
	default "zynq"

config SYS_CONFIG_NAME
	default "nicriozynq" if CRIO
	default "nimyrio" if MYRIO
	default "nisomzynq" if SBRIO

config SYS_TEXT_BASE
	default 0x4000000

config MTD_UBOOT_OFFSET
	hex "U-boot MTD offset"
	default 0x20000

config MTD_RESERVE_END
	hex "MTD Reserved End"
	default 0x80000

config BOARD_SIZE_LIMIT
	hex "Board Size Limit"
	default 0x80000 if CRIO_MEM256 || CRIO_ENETEXP
	default 0x100000

config BOOT_BIN_SIZE_LIMIT
	hex "BOOT.bin max file size"
	default 0x120000

config BOOTFS_VOLUME_SIZE
	hex "BOOTFS UBI volume size"
	default 0x3600000

config BACKUP_PAGE
	hex "NAND backup page"
	default 0xB1F800

config BACKUP_SERIAL_OFFSET
	hex "Serial number backup page offset"
	default 0x7f0 if CRIO || MYRIO
	default 0x7e4 if SBRIO
comment ".      : 000007e0  -- -- -- -- -- -- -- --  -- -- -- -- -- -- -- --"
	depends on CRIO || MYRIO
comment "default: 000007f0  XX XX XX XX -- -- -- --  -- -- -- -- -- -- -- --"
	depends on CRIO || MYRIO
comment "default: 000007e0  -- -- -- -- XX XX XX XX  -- -- -- -- -- -- -- --"
	depends on SBRIO
comment ".        000007f0  -- -- -- -- -- -- -- --  -- -- -- -- -- -- -- --"
	depends on SBRIO

config BACKUP_USBGADGETETHADDR_OFFSET
	hex "USB Gadget Ethernet MAC backup page offset"
	default 0x7ea if CRIO || MYRIO
	default 0x7f4 if SBRIO
comment "default: 000007e0  -- -- -- -- -- -- -- --  -- -- XX XX XX XX XX XX"
	depends on CRIO || MYRIO
comment ".        000007f0  -- -- -- -- -- -- -- --  -- -- -- -- -- -- -- --"
	depends on CRIO || MYRIO
comment "default: 000007e0  -- -- -- -- -- -- -- --  -- -- -- -- -- -- -- --"
	depends on SBRIO
comment ".        000007f0  -- -- -- -- XX XX XX XX  XX XX -- -- -- -- -- --"
	depends on SBRIO

config BACKUP_ETHADDR_OFFSET
	hex "Primary Ethernet MAC backup page offset"
	default 0x7f4 if CRIO || MYRIO
	default 0x7e8 if SBRIO
comment ".        000007e0  -- -- -- -- -- -- -- --  -- -- -- -- -- -- -- --"
	depends on CRIO || MYRIO
comment "default: 000007f0  -- -- -- -- XX XX XX XX  XX XX -- -- -- -- -- --"
	depends on CRIO || MYRIO
comment "default: 000007e0  -- -- -- -- -- -- -- --  XX XX XX XX XX XX -- --"
	depends on SBRIO
comment ".        000007f0  -- -- -- -- -- -- -- --  -- -- -- -- -- -- -- --"
	depends on SBRIO

config BACKUP_ETH1ADDR_OFFSET
	hex "Secondary Ethernet MAC backup page offset"
	default 0x7fa if CRIO || MYRIO
	default 0x7ee if SBRIO
comment ".        000007e0  -- -- -- -- -- -- -- --  -- -- -- -- -- -- -- --"
	depends on CRIO || MYRIO
comment "default: 000007f0  -- -- -- -- -- -- -- --  -- -- XX XX XX XX XX XX"
	depends on CRIO || MYRIO
comment "default: 000007e0  -- -- -- -- -- -- -- --  -- -- -- -- -- -- XX XX"
	depends on SBRIO
comment ".        000007f0  XX XX XX XX -- -- -- --  -- -- -- -- -- -- -- --"
	depends on SBRIO

if ELVISIII
config BACKUP_WIRELESS_REGION_OFFSET
	hex "Wireless region backup page offset"
	default 0x7e0 if ELVISIII
comment "default: 000007e0  XX XX XX XX XX -- -- --  -- -- -- -- -- -- -- --"
comment ".        000007f0  -- -- -- -- -- -- -- --  -- -- -- -- -- -- -- --"

config BACKUP_WIRELESS_BOARD_ID_OFFSET
	hex "Wireless board ID page offset"
	default 0x7e5 if ELVISIII
comment "default: 000007e0  -- -- -- -- -- XX XX XX  XX XX -- -- -- -- -- --"
comment ".        000007f0  -- -- -- -- -- -- -- --  -- -- -- -- -- -- -- --"
endif

config MFG
	bool "Manufacturing U-Boot"
	select NAND_BBT_NO_MARK

config MFG_DHCP
	bool "Enable DHCP in MFG U-Boot"


